    <script type="text/javascript">
            $(document).ready(function() {

                $(function () {
                    debugger;
                    var data = @Html.Raw(@ViewBag.PendingInvoice);
                    if (data.length > 0) {

                        if ($('#tbl_results').hasClass('dataTable')) {
                            $('#tbl_results').dataTable().fnDestroy();
                        }
