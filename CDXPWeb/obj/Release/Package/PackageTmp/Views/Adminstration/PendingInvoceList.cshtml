
@{
    ViewBag.Title = "Pending Invoice List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="pcontent">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="padding: 0px;">
