
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CDXP Testing Environment</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href="/Content/Login/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>
</head>
<body>
<link href='https://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
<div id='stars'></div>
<div id='stars2'></div>
<div id='stars3'></div>

<div class="login__card">
    <div class="login__intro">
        <img src="/Content/Login/C8_logo.jpg" alt="" class="login__image">
        <h3> Carbon8 (Private) Limited.</h3>
        <h5>www.carbon8.com.pk</h5>
    </div>
    <div class="login__form">
        <h1 class="login__heading">CDXP Testing Environment</h1>
        <form action="~/Home/Index" method="post">
            <p>
                <input type="email" name="email" class="input email" placeholder="Email">
            </p>
            <p>
                <input type="password" name="password" class="input password" placeholder="Password">
            </p>
            <p>
                <input type="submit" class="input submit" value="Login">
            </p>
        </form>
        <div class="login__helper">
            <span class="forget__password">
                Forget Your Password? <a href="#">Reset Now</a>
            </span>
            <span class="create__account">Don't Have an Account? <a href="#">Sign Up</a></span>
        </div>
    </div>
</div>
<!-- partial -->
<script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script src="/Content/Login/script.js"></script>

</body>
</html>
