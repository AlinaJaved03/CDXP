                fromdata.append('vls', '7½' + $('#ddlIPP').val());
                $.ajax({
                    type: "POST",
                    url: "/EMO/AjaxCall" + $(location).attr("search"),
                    data: fromdata,
                    contentType: false,
                    processData: false,
                    success: function (response) {
                        $('#ddlVendors').html(response);
                        if ($('#ddlVendors').val() != null || $('#ddlVendors').val() != undefined) {
                            var fromdata = new FormData();
