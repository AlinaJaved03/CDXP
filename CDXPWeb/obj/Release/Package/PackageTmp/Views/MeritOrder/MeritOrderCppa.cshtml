    <script>
        debugger;
        //$("#datepicker").datepicker();

        var date = new Date();
        date.setDate(date.getDate() + 1);

        $("#datepicker").datepicker({ //aymen
            dateFormat: 'dd-M-yy',
            monthNames: ["Jan", "Feb", "Mar", "Apr", "May", "Jun",
                "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]
        });
        $("#datepicker").datepicker("setDate", date);

        getMeritOrder();


        var tempDate = new Date(date);

        var headerDate = moment(tempDate).format('DD-MMM-YYYY');
        $('#headerDate').text(headerDate);



        document.getElementById("iconCalendar").onclick = function (e) {
            document.getElementById("datepicker").focus();
            // You could write code to toggle this
        }
        function getMeritOrder() {

            var meritOrderDate = $("#datepicker").val();
            $('#headerDate').text(moment($("#datepicker").val()).format('DD-MMM-YYYY'));

            $.ajax({
                type: "GET",
                url: "../MeritOrder/MOCppa?date=" + meritOrderDate,
                dataType: 'json',
                async: false,

                beforeSend: function () {
                    $.blockUI({ css: { backgroundColor: 'rgb(170, 170, 170)', color: '#fff' } });
                },
                complete: function () {
                    $.unblockUI();
                },
                success: function (data) {
                    debugger;
                    if ($.fn.DataTable.isDataTable('#tbl_results')) {
                        $('#tbl_results').DataTable().destroy();
                    }

                    $('#tbl_results tbody').html('');

                    if (data.length > 0) {
                        $("#tbl_results thead").html(`
                                                <tr style="height: 35px;">
                                            <th scope="col" class="text-center darkblueBg noBorder noBottomBorder"> </th>
                                            <th scope="col" class="text-center darkblueBg noBottomBorder" colspan="4"></th>
                                            <th scope="col" class="text-center darkblueBg noBottomBorder" colspan="3" style="font-size: 14px !important;">Reference</th>
                                            <th scope="col" class="text-center darkblueBg noBottomBorder" colspan="6" style="font-size: 14px !important;">Estimated</th>
                                            <th scope="col" class="text-center darkblueBg noBottomBorder"></th>
                                        </tr>
                                        <tr style="height: 35px;">
                                            <th scope="col" class="text-center darkblueBg noBorder">Sr <br />No.</th>
                                            <th scope="col" class="text-center darkblueBg OnlyLeftBorder">Plant Groups</th>
                                            <th scope="col" class="text-center darkblueBg noBorder">Fuel <br />Type</th>
                                            <th scope="col" class="text-center darkblueBg noBorder">COD <br />Date</th>
                                            <th scope="col" class="text-center darkblueBg noBorder">Dependable<br /> Capacity</th>
                                            <th scope="col" class="text-center darkblueBg OnlyLeftBorder">Fuel Cost<br /> Rs./kWh</th>
                                            <th scope="col" class="text-center darkblueBg noBorder">VO & M<br /> Rs./kWh</th>
                                            <th scope="col" class="text-center darkblueBg noBorder">Specific Cost<br /> Rs./kWh</th>
                                            <th scope="col" class="text-center darkblueBg OnlyLeftBorder">Other Cost<br /> Rs./kWh</th>
                                            <th scope="col" class="text-center darkblueBg noBorder">Fuel Cost<br /> Rs./kWh</th>
                                            <th scope="col" class="text-center darkblueBg noBorder">VO & M<br /> Rs./kWh</th>

                                            <th scope="col" class="text-center darkblueBg noBorder">Specific Cost<br /> Rs./kWh</th>
                                            <th scope="col" class="text-center darkblueBg noBorder">Adjustment</th>
                                            <th scope="col" class="text-center darkblueBg noBorder">Total Applicable for MO<br /> Rs./kWh</th>
                                            <th scope="col" class="text-center darkblueBg OnlyLeftBorder">Status</th>
                                        </tr>
                                            `);
                        var ak = 0;
                        $.each(data, function (index, value) {
                            ak++;

                            const momentTimestamp = moment(value.COD_Date);
                            var formatedDate = momentTimestamp.format("DD-MMM-YYYY");

                            $('#ajaxRes_meritOrder_cppa').append(
                                '<tr>\
                                                <td align="right">'+ ak + '</td>\
                                                <td align="left">'+ value.vendor_name + '</td>\
                                                <td align="left">'+ value.Fuel_type + '</td>\
                                                <td align="center">'+ formatedDate + '</td>\
                                                <td align="right">'+ currencyFormat(isNullAndUndef(value.Dependable_Capacity)) + '</td>\
                                                <td align="right">'+ currencyFormat(isNullAndUndef(value.Reference_Fuel_Cost)) + '</td>\
                                                <td align="right">'+ currencyFormat(isNullAndUndef(value.Reference_VOM_Cost)) + '</td>\
                                                <td align="right">'+ currencyFormat(isNullAndUndef(value.Reference_Specific_cost)) + '</td>\
                                                <td align="right">'+ currencyFormat(isNullAndUndef(value.MeritOrder_MO_OtherCost)) + '</td>\
                                                <td align="right">'+ currencyFormat(isNullAndUndef(value.MeritOrder_Fuel_Cost)) + '</td>\
                                                <td align="right">'+ currencyFormat(isNullAndUndef(value.MeritOrder_VOM_Cost)) + '</td>\
                                                <td align="right">'+ currencyFormat(isNullAndUndef(value.MeritOrder_Specific_cost)) + '</td >\
                                                <td align="right">'+ currencyFormat(isNullAndUndef(value.Adjustment)) + '</td >\
                                                <td align="right">'+ currencyFormat(isNullAndUndef(value.merit_order_total)) + '</td>\
                                                <td align="right">'+ value.FinalMeritOrderDetail_MeritOrder + '</td>\
                                            </tr>\ '
                            );
                        });
                    }

                    //$("#tbl_results").DataTable({
                    //    "ordering": false,
                    //    "searching": false,
                    //    "paging": false,
                    //    "bLengthChange": false
                    //});
                    $.unblockUI();

                },
                error: function (request, textStatus, errorThrown) {
                    $.unblockUI();
                }
            });
        }


        $.ajax({
            type: "GET",
            url: "../MeritOrder/MoDataNotes",
            async: false,

            beforeSend: function () {
                $.blockUI({ css: { backgroundColor: 'rgb(170, 170, 170)', color: '#fff' } });
            },
            complete: function () {
                $.unblockUI();
            },
            success: function (data) {
                debugger;
                var resArr = JSON.parse(data);

                $('#notes').html('');
                $('#notes').html(resArr[0].MO_NOTES);

                $.unblockUI();

            },
            error: function (request, textStatus, errorThrown) {
                $.unblockUI();
            }
        });


        function isNullAndUndef(variable) {

            if (variable !== null && variable !== undefined && variable !== '') {
                variable = variable;
            }
            return variable;

        }

        function currencyFormat(value) {
            debugger;
            //var amount = parseFloat(value);
            //amount = amount.toLocaleString('en-US');
            //return amount;
            var amount = value.toLocaleString(undefined, {
                minimumFractionDigits: 4,
                maximumFractionDigits: 4
            });
            return amount;

        }



        $('body').off('click', '#btnExport');
        $('body').on('click', '#btnExport', function (e) {
            e.preventDefault();

            //$('#dvexl').show();
            $('#tbl_results').tableExport({ fileName: 'Exported Data', type: 'excel', escape: 'false' });
            //$('#dvexl').hide();
            e.preventDefault();
        });



        $('body').off('click', '#generateMeritOrder');
        $('body').on('click', '#generateMeritOrder', function (e) {

            $.blockUI({ css: { backgroundColor: 'rgb(170, 170, 170)', color: '#fff' } });

            setTimeout(function () {
                $.ajax({
                    type: "GET",
                    url: "../MeritOrder/generateMeritOrder",
                    dataType: 'json',
                    async: false,

                    beforeSend: function () {
                       // $.blockUI({ css: { backgroundColor: 'rgb(170, 170, 170)', color: '#fff' } });
                        $.unblockUI();
                    },
                    complete: function () {
                        $.unblockUI();
                    },
                    success: function (data) {
                        debugger;

                        var resArr = data.split('½');
                        if (resArr[0] == "1") {
                            setTimeout(function () {
                                swal({
                                    title: "Merit Order!",
                                    text: "Generated Successfully",
                                    type: "success",
                                    showCancelButton: false,
                                    showConfirmButton: true
                                }, function () {
                                    getMeritOrder();
                                }
                                );
                            }, 500);

                        }
                        else {
                            swal({
                                title: "Error!",
                                text: resArr[1],
                                type: "error",
                                showCancelButton: false,
                                showConfirmButton: true
                            });
                        }
                        $.unblockUI();

                    },
                    error: function (request, textStatus, errorThrown) {
                        $.unblockUI();
                    }
                });

            }, 500);
        });
    </script>
