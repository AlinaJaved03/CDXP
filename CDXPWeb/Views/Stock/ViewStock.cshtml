        function formatdate(date) {
            try {
                var d = new Date(date);
                var dd = d.getDate() < 10 ? "0" + d.getDate() : d.getDate();
                return dd + "-" + monthNames[d.getMonth()] + "-" + d.getFullYear();
            } catch (err) {
                return "";
            }

        }

